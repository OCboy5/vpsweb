# VPSWeb Repository Environment Configuration Template
# Copy to .env.local and update values as needed
# This file is git-ignored - DO NOT commit actual secrets

# =============================================================================
# Repository Configuration (v0.3)
# =============================================================================

# Repository root directory (can be overridden)
REPO_ROOT=./repository_root

# Database URL (can be overridden for testing different databases)
REPO_DATABASE_URL=sqlite+aiosqlite:///./repository_root/repo.db

# Server configuration
REPO_HOST=127.0.0.1
REPO_PORT=8000
REPO_DEBUG=false

# =============================================================================
# Authentication Configuration (v0.4+)
# =============================================================================
# These settings are for future v0.4+ implementation
# Leave commented out for v0.3 localhost deployment

# REPO_PASSWORD_HASH=$argon2id$v=19$m=65536,t=3,p=4$<hash-goes-here>
# REPO_SESSION_SECRET=<session-secret-goes-here>

# =============================================================================
# VPSWeb Integration Configuration
# =============================================================================

# Path to vpsweb configuration (usually auto-detected)
VPSWEB_CONFIG_PATH=config

# Default workflow mode for vpsweb integration
VPSWEB_WORKFLOW_MODE=hybrid

# =============================================================================
# Development & Debugging
# =============================================================================

# Enable development mode
DEV_MODE=false

# Enable verbose logging
VERBOSE_LOGGING=false

# Structured logging format (json or text)
LOG_FORMAT=json

# =============================================================================
# Future Extensions (v0.4+)
# =============================================================================
# These settings are planned for future versions

# External API keys (if needed)
# EXTERNAL_API_KEY=<api-key>

# Redis configuration (for job queuing in v0.4+)
# REDIS_URL=redis://localhost:6379/0

# Email configuration (for notifications in v0.4+)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-password