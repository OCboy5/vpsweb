# Vox Poetica Studio Web - Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# Python Path Configuration (for src layout)
PYTHONPATH=/Volumes/Work/Dev/vpsweb/vpsweb/src

# Tongyi/Qwen API Configuration
TONGYI_API_KEY=your_tongyi_api_key_here

# DeepSeek API Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# OpenAI API Configuration (Optional)
OPENAI_API_KEY=your_openai_api_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=vpsweb.log

# Output Configuration
OUTPUT_DIR=outputs
# Optional: Custom output format (json, yaml)
OUTPUT_FORMAT=json

# WeChat Official Account Configuration
# Required for WeChat article publishing functionality
WECHAT_APPID=your_wechat_appid_here
WECHAT_SECRET=your_wechat_secret_here